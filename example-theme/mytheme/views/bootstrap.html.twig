{#
    bootstrap.html.twig
#}

{% extends 'getsimple.html.twig' %}


{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="{{ page.meta_keywords }}" /> 
    <meta name="desc" content="{{ meta_desc }}" />
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="{{ theme.url }}/asset/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="{{ theme.url }}/asset/css/style.css">
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap core JavaScript -->
    <script src="{{ theme.url }}/asset/jquery/jquery.slim.min.js"></script>
    <script src="{{ theme.url }}/asset/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src="{{ theme.url }}/asset/js/script.js" ></script>
{% endblock %}

{% block body %}

    <!-- Bootstrap 4 Bare Template -->
    <!-- https://startbootstrap.com/templates/bare/ -->

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="{{ site.url }}">{{ site.name }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    {% for item in site.menu %}
                        <li class="nav-item"><a class="nav-link" href="{{ item.url }}" >{{ item.menu_text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>


    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-5">{{page.title}}</h1>
                {{ page.content|raw }}
            </div>
        </div>
    </div>

{% endblock %}
